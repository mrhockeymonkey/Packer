		"iso_checksum": "E2B75A24CD9D953056D8AA09982C4281"
	},
	"builders": [
		{
			"type": "virtualbox-iso",
			"vm_name": "{{ user `vm_name`}}",
			"keep_registered": "false",
			"guest_os_type": "Windows10_64",
			"guest_additions_mode": "disable",
			"iso_url": "{{ user `iso_url`}}",
			"iso_checksum": "{{ user `iso_checksum`}}",
			"iso_checksum_type": "md5",
			"disk_size": 25000,
			"vboxmanage": [
				[
					"modifyvm",
					"{{.Name}}",
					"--memory",
					"2048"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--cpus",
					"2"
				]
			],
			"floppy_files": [
				"answer/win_10/Autounattend.xml",
				"scripts/floppy/FirstLogonSetup.ps1",
				"scripts/floppy/SysPrep.bat"
			],
			"boot_wait": "15s",
			"communicator": "winrm",
			"winrm_timeout": "4h",
			"winrm_username": "{{ user `vm_user`}}",
			"winrm_password": "{{ user `vm_pass`}}",
			"shutdown_command": "A:/SysPrep.bat",
			"shutdown_timeout": "15m",
			"post_shutdown_delay": "30s"
		}
	],
	"provisioners": [
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallChocolatey.ps1",
			"elevated_user": "{{ user `vm_user`}}",
			"elevated_password": "{{ user `vm_pass`}}"
		},
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallPSModules.ps1",
			"environment_vars": [
				"RequiredProviders=Nuget;PowerShellGet",
				"RequiredModules=PSWindowsUpdate"
			]
		},
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallWindowsUpdates.ps1",
			"elevated_user": "{{ user `vm_user`}}",
			"elevated_password": "{{ user `vm_pass`}}"
		},
		{
			"type": "windows-restart",
			"restart_timeout": "20m"
		},
		{% block apps %}{% endblock %}
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallWindowsUpdates.ps1",
			"elevated_user": "{{ user `vm_user`}}",
			"elevated_password": "{{ user `vm_pass`}}"
		},
		{
			"type": "windows-restart",
			"restart_timeout": "20m"
		}
	],
	"post-processors": [
		[
			{
				"type": "artifice",
				"files": [
					"output-virtualbox-iso/{{user `vm_name`}}-disk1.vmdk"
				]
			},
			{
				"type": "shell-local",
				"execute_command": "{{.Script}} -Artifact {{.Artifact}} -Format VHD",
				"script": "scripts/postprocessing/CloneVirtualDisk.ps1"
			},
			{
				"type": "artifice",
				"files": [
					"output-virtualbox-iso/{{user `vm_name`}}-disk1.vhd"
				]
			},
			{
				"type": "shell-local",
				"execute_command": "{{.Script}} -Artifact {{.Artifact}}",
				"script": "scripts/postprocessing/CaptureWindowsImage.ps1"
			}
		]
	]
}