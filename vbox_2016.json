{
	"variables": {
		"vm_name": "server_2012_r2_x64_{{timestamp}}",
		"iso_url": "iso/en_windows_server_2016_x64_dvd_9327751.iso",
		"iso_checksum": "91D7B2EBCFF099B3557570AF7A8A5CD6"
	},
	"builders": [
		{
			"type": "virtualbox-iso",
			"keep_registered": "false",
			"guest_os_type": "Windows2012_64",
			"guest_additions_mode": "disable",
			"iso_url": "{{ user `iso_url`}}",
			"iso_checksum": "{{ user `iso_checksum`}}",
			"iso_checksum_type": "md5",
			"disk_size": 25000,
			"vboxmanage": [
				[
					"modifyvm",
					"{{.Name}}",
					"--memory",
					"2048"
				],
				[
					"modifyvm",
					"{{.Name}}",
					"--cpus",
					"2"
				]
			],
			"floppy_files": [
				"answer/2016/Autounattend.xml",
				"scripts/floppy/FirstLogonSetup.ps1"
			],
			"boot_wait": "15s",
			"communicator": "winrm",
			"winrm_timeout": "4h",
			"winrm_username": "Administrator",
			"winrm_password": "build",
			"shutdown_command": "C:/windows/system32/shutdown.exe -s -t 0",
			"shutdown_timeout": "15m",
			"post_shutdown_delay": "30s"
		}
	],
	"provisioners": [
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallChocolatey.ps1",
			"elevated_user": "Administrator",
			"elevated_password": "build"
		},
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallPSModules.ps1",
			"environment_vars": [
				"RequiredProviders=Nuget;PowerShellGet",
				"RequiredModules=PSWindowsUpdate;Pester;PSake"
			]
		},
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallWindowsUpdates.ps1",
			"elevated_user": "Administrator",
			"elevated_password": "build"
		},
		{
			"type": "windows-restart",
			"restart_timeout": "20m"
		},
		{
			"type": "powershell",
			"script": "scripts/provisioning/InstallWindowsUpdates.ps1",
			"elevated_user": "Administrator",
			"elevated_password": "build"
		},
		{
			"type": "windows-restart",
			"restart_timeout": "20m"
		}
	],
	"post-processors": [
		[
			{
				"type": "artifice",
				"files": [
					"{{user `vm_name`}}-disk1.vmdk"
				]
			},
			{
				"type": "shell-local",
				"execute_command": "{{.Script}} -Artifact {{.Artifact}} -Format VHD",
				"script": "scripts/postprocessing/CloneVirtualDisk.ps1"
			},
			{
				"type": "artifice",
				"files": [
					"{{user `vm_name`}}-disk1.vhd"
				]
			},
			{
				"type": "shell-local",
				"execute_command": "{{.Script}} -Artifact {{.Artifact}}",
				"script": "scripts/postprocessing/CaptureWindowsImage.ps1"
			}
		]
	]
}